<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.mule.modules</groupId>
	<artifactId>mule-module-google-calendar</artifactId>
	<packaging>mule-module</packaging>
	<name>Google Calendars Connector</name>
	<version>2.0.0-SNAPSHOT</version>

    <parent>
		<groupId>org.mule.tools.devkit</groupId>
		<artifactId>mule-devkit-parent</artifactId>
		<version>3.5.0-M4</version>
	</parent>

	<properties>
        <junit.version>4.9</junit.version>
		<mockito.version>1.8.2</mockito.version>
		<jdk.version>1.6</jdk.version>
		<category>Community</category>
		<licensePath>LICENSE.md</licensePath>
		<devkit.studio.package.skip>false</devkit.studio.package.skip>
		<connector.test.version>2.0.3</connector.test.version>
        <google.commons.version>2.0.0-SNAPSHOT</google.commons.version>
    </properties>

	<dependencies>
		<dependency>
			<groupId>com.mulesoft.modules</groupId>
			<artifactId>mule-module-google-api-commons</artifactId>
			<version>${google.commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.google.apis</groupId>
			<artifactId>google-api-services-calendar</artifactId>
			<version>v3-rev77-1.17.0-rc</version>
		</dependency>
    </dependencies>

	<repositories>
		<repository>
			<id>mule-releases</id>
			<name>MuleSoft Releases Repository</name>
			<url>http://repository.mulesoft.org/releases/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>mule-snapshots</id>
			<name>MuleSoft Snapshots Repository</name>
			<url>http://repository.mulesoft.org/snapshots/</url>
			<layout>default</layout>
		</repository>
		<repository>
			<id>google-api-services</id>
			<url>http://mavenrepo.google-api-java-client.googlecode.com/hg</url>
		</repository>
	</repositories>

	<scm>
		<connection>scm:git:git://github.com:mulesoft/google-calendar-connector.git</connection>
		<developerConnection>scm:git:git@github.com:mulesoft/google-calendar-connector.git</developerConnection>
		<url>https://github.com/mulesoft/google-calendar-connector</url>
	</scm>
</project>
